<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.changepassword.ChangePasswordActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_done_24"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Change Password"
        android:textAllCaps="true"
        android:id="@+id/profileinformation"
        android:layout_margin="@dimen/_20sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/profileinformation"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tex_email"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profileinformation"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="1234567890"
            android:inputType="textPassword"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/profileinformation"
            app:layout_constraintStart_toEndOf="@id/tex_email"
            android:background="@color/grey" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/linear_email"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#e5e8eb"
        android:layout_margin="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tex_password"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profileinformation"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="1234567890"
            android:inputType="textPassword"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/profileinformation"
            app:layout_constraintStart_toEndOf="@id/tex_email"
            android:background="@color/grey" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@id/linear_password"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#e5e8eb"
        android:layout_margin="@dimen/_10sdp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_30sdp"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/changepasswordbuttonbackground"
        android:padding="@dimen/_20sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>